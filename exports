# Git branch in prompt
export GIT_PS1_SHOWDIRTYSTATE='1'
export GIT_PS1_SHOWUPSTREAM='1'

# Java home
export JAVA_HOME=$(/usr/libexec/java_home -v 1.8)

# GD Stuff
export CLIENT_PATH="/Users/adam/Work/gdc/gdc-client"
